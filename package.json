{
  "name": "effitor-monorepo",
  "version": "0.2.0",
  "description": "An elegant and efficient editor.",
  "private": true,
  "keywords": [
    "editor",
    "wysiwyg",
    "markdown"
  ],
  "type": "module",
  "author": "Henvn Leaf",
  "license": "MIT",
  "homepage": "https://github.com/Ausprain/effitor#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ausprain/effitor.git"
  },
  "scripts": {
    "check": "tsc --noEmit",
    "build:main": "bun ./scripts/build.js",
    "prebuild:main": "tsc --noEmit && bun eslint packages --quiet && bun run update:packages",
    "update:packages": "bun ./scripts/updatePackageJson.js",
    "test": "vitest --project unit --project intg",
    "test-unit": "vitest unit",
    "test-e2e:chrome": "vitest e2e --browser chromium"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.56.1",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.3.1",
    "@vitest/browser": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "fs-extra": "^11.3.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "rect-visualizer": "^1.0.1",
    "stylelint": "^16.23.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "main",
    "algo-perf"
  ]
}
