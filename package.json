{
  "name": "effitor",
  "version": "0.1.0",
  "description": "A web editor based on `Input Events Level 2`",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "run-p bundle-js bundle-dts",
    "bundle-js": "node esbuild.config.js",
    "bundle-dts": "tsc -p tsconfig.json && npx rollup -c rollup.dts.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ausprain/effitor.git"
  },
  "keywords": [
    "effitor",
    "web editor"
  ],
  "author": "Ausprain",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ausprain/effitor/issues"
  },
  "homepage": "https://github.com/Ausprain/effitor#readme",
  "devDependencies": {
    "@types/node": "^20.12.7",
    "esbuild": "^0.20.2",
    "eslint": "^9.1.1",
    "npm-run-all2": "^6.1.2",
    "rollup": "^4.16.1",
    "rollup-plugin-dts": "^6.1.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.10"
  }
}
