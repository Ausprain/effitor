{
  "files": ["./env.d.ts"],
  "include": ["./packages", "./main"],
  "exclude": ["**/dist"],
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    // "preserveConstEnums": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["esnext", "DOM", "dom.iterable"],
    "paths": {
      "@effitor/*": ["./packages/*/src/index.ts"]
    },

    "jsx": "react-jsx"
    // "jsxImportSource": "preact"
  }
}
