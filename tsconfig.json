{
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    // "alwaysStrict": true,   // use strict
    // "strictNullChecks": true,
    "composite": true,
    // "noEmit": true,
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {
      "@/*": ["./src/*"]
    },

    "outDir": "temp/",
    "declaration": true,
    // "declarationDir": "temp/types",
    "declarationMap": false,
    "emitDeclarationOnly": true
  }
}